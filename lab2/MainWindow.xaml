<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="Детерминированный конечный автомат" Height="300" Width="450">
    <Grid Background="#B4D1F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Foreground="#25408E" Content="Цепочка для проверки:" FontSize="16" Margin="10,10,10,0" HorizontalContentAlignment="Center" FontFamily="Arial" FontStyle="Italic"/>
        <TextBox x:Name="InputTextBox" FontSize="14" Margin="10,0,10,10" Grid.Row="1" />

        <Button x:Name="CheckButton" Content="Проверить" Background="#8CE9F2" FontSize="14" Margin="10,0,10,10" Grid.Row="2" Click="CheckButton_Click" FontFamily="Arial" FontStyle="Italic"/>

        <TextBlock x:Name="ResultTextBlock" FontSize="14" Margin="10,0,10,10" Grid.Row="3" TextWrapping="Wrap" HorizontalAlignment="Center" FontFamily="Arial" FontStyle="Italic"/>
    </Grid>
</Window>
